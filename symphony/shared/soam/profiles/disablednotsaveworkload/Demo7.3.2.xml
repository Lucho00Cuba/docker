<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Profile xmlns="http://www.platform.com/Symphony/Profile/Application" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <Consumer applicationName="Demo7.3.2" consumerId="/SampleApplications/SOADemo"
              taskHighWaterMark="1.0" taskLowWaterMark="0.0" resourceGroupName="ComputeHosts"
              preStartApplication="false" numOfSlotsForPreloadedServices="10" policy="R_MinimumServices"/>

    <SOAM>
     <SSM resReq="" workDir="${EGO_SHARED_TOP}/soam/work" disableFlowControl="true">
	 </SSM>
    </SOAM>

    <SessionTypes>
        <Type name="parentSessionType" priority="1"
              sessionRetryLimit="3" taskRetryLimit="3"
              abortSessionIfTaskFail="true"
              suspendGracePeriod="100"  taskCleanupPeriod="100" minServices="1" maxServices="0" persistTaskHistory="all" recoverable="false"/>

        <Type name="childSessionType" priority="1"
              sessionRetryLimit="3" taskRetryLimit="3"
              abortSessionIfTaskFail="true" abortSessionIfClientDisconnect="true"
              suspendGracePeriod="100"  taskCleanupPeriod="100" minServices="1" maxServices="0" persistTaskHistory="all" recoverable="false"/>
    </SessionTypes>

    <Service description="The Monte Carlo simulation for calculating VaR application" name="MonteCarloVaRService">
        <osTypes>
            <osType name="all"
               startCmd="${SOAM_HOME}/${VERSION_NUM}/${EGO_MACHINE_TYPE}/app/MonteCarloVaRDemo/MonteCarloVaRService"
               workDir="${SOAM_HOME}/work">
            </osType>
        </osTypes>
    </Service>

</Profile>
