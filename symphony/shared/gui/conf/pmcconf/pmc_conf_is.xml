<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE ParamConfs SYSTEM "pmc_conf.dtd"> 
<ParamConfs> 
	<MainConsole TabStyle="top">
		<Module Name="HARVESTING" UserAclName="Main_HARVESTING" URL="/platform/getHarvestingHostInfo.controller" OnlineHelpURL="/doc/help/scav_hosts_list_understanding.html" IconStyle="moduleTab-9">
			<ModuleItem Name="VM Resources" UserAclName="IS_VMCluster" URL="/isgui/getResourceView.controller" HasConsumerTree="no"/>
		</Module>
	</MainConsole>
	<Configuration>
		<Parameter>
			<!--  VM Cluster list refresh interval, unit:second,it should be between 10 and 900, belong to IS -->
			<Name>VMClusterInterval</Name>
			<Value>30</Value>
		</Parameter>
		<Parameter>
			 <!--  timeout for perform action with backend, unit:second,it should be bigger than 1 , belong to IS -->
			 <Name>ISPerformTimeOut</Name>
			 <Value>300</Value>
		 </Parameter>
		<Parameter>
			 <!--  timeout for query from backend, unit:second,it should be bigger than 1 , belong to IS-->
			 <Name>ISQueryTimeOut</Name>
			 <Value>60</Value>
		 </Parameter>
		 <Parameter>
			 <!--  retry limit for query from backend, unit:account time,it should be bigger than 0 , belong to IS-->
			 <Name>ISQueryRetryLimit</Name>
			 <Value>3</Value>
		 </Parameter>
	</Configuration>
</ParamConfs> 

