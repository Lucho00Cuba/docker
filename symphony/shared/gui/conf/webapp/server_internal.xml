<server description="Platform WEBGUI Server">
	<applicationMonitor updateTrigger="disabled"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_isgui.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_batchgui.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_dscgui.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_ascgui.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_conductorgui.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_soamgui.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_symgui.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_platformv5.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_perfgui.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_explorer.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_isguiv5.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_mrgui.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_hfgui.xml"/>
	
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_cwsguiv5.xml"/>
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_hfguiv6.xml"/>
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_demogui.xml"/>
	<include optional="true" location="${env.EGO_CONFDIR}/../../gui/conf/webapp/webapp_restproxy.xml"/>
	
	<library id="Platform_GUI">
		<fileset dir="${env.EGO_TOP}/gui/${env.GUI_VERSION}/lib" includes="*.jar"/>
	</library>
	
	<library id="Soam_Private_Lib">
		<fileset dir="${env.EGO_TOP}/gui/${env.SOAM_VERSION}/soamPrivateLib" includes="*.jar"/>
	</library>
	
	<library id="log4jConfig">
		<folder dir="${env.EGO_CONFDIR}/../../gui/conf" includes="log4j.properties"/>
	</library>
	
	<webApplication id="platform" location="ego/${env.EGO_VERSION}/platform" name="platform">
		<classloader commonLibraryRef="Platform_GUI,log4jConfig"></classloader>
	</webApplication>

	<webApplication id="Platform" location="${env.GUI_VERSION}/common_ui" name="Platform">
		<classloader commonLibraryRef="Platform_GUI,log4jConfig"></classloader>
	</webApplication>

	<webApplication id="common_ui" location="${env.GUI_VERSION}/common_ui" name="common_ui">
		<classloader commonLibraryRef="Platform_GUI,log4jConfig"></classloader>
	</webApplication>

	<webApplication id="perfgui" location="perf/${env.PERF_VERSION}/perfgui" name="perfgui">
		<classloader commonLibraryRef="Platform_GUI,log4jConfig"></classloader>
	</webApplication>

	<!-- define a ROOT application to resolve the root context issue -->
		<webApplication id="root" location="${env.GUI_VERSION}/common_ui" contextRoot="/" name="root">
		<classloader commonLibraryRef="Platform_GUI,log4jConfig"></classloader>
	</webApplication>
	
	<jspEngine reloadEnabled="false"/>
	
	<httpSession cookieName="PLATFORMWEBGUI"/>

</server>
