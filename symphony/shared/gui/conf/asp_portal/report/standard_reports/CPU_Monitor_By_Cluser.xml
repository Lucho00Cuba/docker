			<Column Name="GROUP_NAME" Label="集群" />
			<Column Name="RUN" Label="占用的CPU数(个)" />
			<Column Name="RUN_TIME_BY_JOB" Label="正常完成-占用CPU(个)" />
			<Column Name="RUN_TIME" Label="正常完成-运算时间(小时)" />
			<Column Name="PEND" Label="排队等待的CPU数(个)" />
		</DataExport>
