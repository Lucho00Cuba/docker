				<TableColumn Name="AVG_REQUESTED_SLOT" Label="平均(个)" UpperHeader="请求的CPU数" Type="NUMERIC" Format="#,###,###,##0.00" Style="text-align:right"/>
			</TableColumns>
		</Layout>
	<Layout>
