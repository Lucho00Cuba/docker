<?xml version="1.0" encoding="UTF-8"?>
<DataLoader xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:noNamespaceSchemaLocation="dataloader.xsd" >
	
	<!-- 
	Defined which Reader implement will be used to get data. The Class
	attribute refer the Class name or Reader implements. This Class can be
	developed by customer. 
	-->
	<Reader Class="com.platform.perf.dataloader.ego.allocreqevent.Egoeventdataloader">
		<Properties>
			<Property>
				<Name>RetryLimit</Name>
					<!--The value is the limit for retry count when the read lines include '\0' character-->
					<Value>1</Value>
			</Property>
		</Properties>
	</Reader>
	
	<!-- 
	Defined which Writer will be used to load the output of Reader into
	DataBase. 
	Type 		attribute is optional, it defined the DataBase operation type.
				By default, it is JDBC.
	BatchSize 	Defined how many records will be committed into DataBase one time.
	-->
	<Writer Type="JDBC" BatchSize="1">
		<!-- 
		Defined the name of which DataSource will be used. This is Optional
		-->
		<DataSource>ReportDB</DataSource>
		
		<!--
		The SQL statement will be defined in this element. If  The Field sub
		elements map the output of Reader to DataBase table. The Name attribute
		is the key of Reader output. The Column attribute is the column name of
		DataBase Table.
		-->
	<SQL Input="ALLOCATION_EVENT">
   	<Statement><![CDATA[
   	INSERT INTO ALLOCATION_EVENT (
   	EVENT_TYPE,
	EVENT_TIME,
	EVENT_TIME_GMT,
	ALLOCATION_ID,
	ALLOCATION_NAME,
	CLIENT,
	CONSUMER_NAME,
	RESOURCE_GROUP,
	FILTER,
	MIN_SLOT,
	MAX_SLOT,
	FLAGS,
	TILE,
	HOSTS,
	BLHOSTS,
	RESOURCE_GROUP_LISTS,
	USER_NAME,
	CONTAINER_ID,
	FILE_POSITION,
	CLUSTER_NAME
   	)VALUES(?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?,?)
   	]]>
   	</Statement>
   	<Field Name="EVENT_TYPE" Column="EVENT_TYPE"/>
   	<Field Name="EVENT_TIME" Column="EVENT_TIME" Type="Timestamp"/>
   	<Field Name="EVENT_TIME_GMT" Column="EVENT_TIME_GMT" Type="Numeric"/>
   	<Field Name="ALLOCATION_ID" Column="ALLOCATION_ID" />
   	<Field Name="ALLOCATION_NAME" Column="ALLOCATION_NAME"/>
   	<Field Name="CLIENT" Column="CLIENT"/>
   	<Field Name="CONSUMER_NAME" Column="CONSUMER_NAME"/>
   	<Field Name="RESOURCE_GROUP" Column="RESOURCE_GROUP"/>
   	<Field Name="FILTER" Column="FILTER"/>
   	<Field Name="MIN_SLOT" Column="MIN_SLOT" Type="Numeric"/>
   	<Field Name="MAX_SLOT" Column="MAX_SLOT" Type="Numeric"/>
   	<Field Name="FLAGS" Column="FLAGS" Type="Numeric"/>
   	<Field Name="TILE" Column="TILE" Type="Numeric"/>   	
   	<Field Name="HOSTS" Column="HOSTS"/>
   	<Field Name="BLHOSTS" Column="BLHOSTS"/>
   	<Field Name="RESOURCE_GROUP_LISTS" Column="RESOURCE_GROUP_LISTS"/>
   	<Field Name="USER_NAME" Column="USER_NAME"/>
   	<Field Name="CONTAINER_ID" Column="CONTAINER_ID" Type="Numeric"/>
   	<Field Name="FILE_POSITION" Column="FILE_POSITION" Type="Numeric"/>
    <Field Name="clustername" Column="CLUSTER_NAME"/>
  	</SQL>
		
	</Writer>
</DataLoader>
