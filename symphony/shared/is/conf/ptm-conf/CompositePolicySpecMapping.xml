<?xml version="1.0"?>
<mapping>
        <class name="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RuntimePolicySpecRoot">
                <map-to xml="policycatalog"/>
                <field name="ChildrenEntry"
                       type="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RuntimePolicySpecEntry"
                       collection="collection">
                        <bind-xml name="policyentry"/>
                </field>
                <field name="lastPolicyID"
                       type="java.lang.String">
                        <bind-xml name="lastPolicyID"/>
                </field>
                
                <field name="lastRuleID"
                       type="java.lang.String">
                        <bind-xml name="lastRuleID"/>
                </field>
                
        </class>
        
        <class name="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RuntimePolicySpecEntry">
             	<field name="PolicyID"
                       type="java.lang.String">
                        <bind-xml name="policyID"/>
                </field>
                
                <field name="SourceFile"
                       type="java.lang.String">
                        <bind-xml name="filename"/>
                </field>
         </class>
</mapping>
