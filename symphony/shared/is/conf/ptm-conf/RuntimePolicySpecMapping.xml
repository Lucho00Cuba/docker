<?xml version="1.0"?>
<mapping>
        <class name="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RuntimePolicySpec">
                <map-to xml="PolicySpec"/>
               
                <field name="ID"
                       type="java.lang.String">
                        <bind-xml name="policyID"/>
                </field>
                
               	<field name="Name"
                       type="java.lang.String">
                      
                        <bind-xml name="name"/>
                </field>
                

               	<field name="Type"
                       type="integer">
                      
                        <bind-xml name="type"/>
                </field>
                
               	<field name="description"
                       type="java.lang.String">
                      
                        <bind-xml name="description"/>
                </field>
                

               	<field name="NotificationSpec"
                       type="java.lang.String">
                      
                        <bind-xml name="notificationSpec"/>
                </field>
                
                
                <field name="TargetShadow"
                       type="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RTPolicyTarget">
                        <bind-xml name="target"/>
                </field>	
              
             
                <field name="Calendar"
                       type="com.platform.ThresholdMgmt.PublicAPIs.PolicyCalendar">
                        <bind-xml name="calendar"/>
                </field>
             
                 <field name="StablePeriodShadow"
                       type="java.lang.Integer">
                      
                        <bind-xml name="stablePeriod"/>
                </field>
               
               	<field name="RunIntervalShadow"
                       type="java.lang.Integer">
                      
                        <bind-xml name="runInterval"/>
                </field>
               
                <field name="CreationDate"
                       type="java.util.Date">
                      
                        <bind-xml name="createDate"/>
                </field>
                
                <field name="ChangedDate"
                       type="java.util.Date">
                      
                        <bind-xml name="changeDate"/>
                </field>
                
                 <field name="Children"
                       type="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RuntimeRuleSpec"
                       collection="collection">
                       <bind-xml name="RuleSpec"/>
                </field>
                       
        </class>
        
        
        
    <class name="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RTPolicyTarget">
           <field name="properties"
                  type="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RTPolicyTargetProperty"
                   collection="collection">
                   <bind-xml name="property"/>
            </field>
            
      </class>
        
      <class name="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RTPolicyTargetProperty">
           	<field name="Name"
                       type="java.lang.String">
                        <bind-xml name="name"/>
                </field>
                
                <field name="Value"
                       type="java.lang.String">
                        <bind-xml name="value"/>
                </field>
      
       </class>
        
     <!-- <class name="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RTPolicyCalendar">
            <field name="interval"
                  type="java.lang.String">
                   <bind-xml name="interval"/>
            </field>
            <field name="StartTime"
                  type="java.lang.String">
                   <bind-xml name="startTime"/>
            </field>
            
             <field name="EndTime"
                  type="java.lang.String">
                   <bind-xml name="endTime"/>
            </field> 
      </class>-->
      
       <class name="com.platform.ThresholdMgmt.PublicAPIs.PolicyCalendar">
            <field name="RepeatFactor"
                  type="java.lang.Long">
                   <bind-xml name="interval"/>
            </field>
            <field name="StartTime"
                  type="java.lang.String">
                   <bind-xml name="startTime"/>
            </field>
            
             <field name="EndTime"
                  type="java.lang.String">
                   <bind-xml name="endTime"/>
            </field> 
      </class>
    
    
            
         <class name="com.platform.ThresholdMgmt.DataModel.PolicyDataModel.RuntimeRuleSpec">
             <field name="RuleID"
                       type="java.lang.String">
                        <bind-xml name="ruleID"/>
                </field>
                
               	<field name="Name"
                       type="java.lang.String">
                      
                        <bind-xml name="name"/>
                </field>
                

               	<field name="description"
                       type="java.lang.String">
                      
                        <bind-xml name="description"/>
                </field>
                
                 <field name="condition"
                       type="java.lang.String">
                      
                        <bind-xml name="condition"/>
                </field>
         
                <field name="action"
                       type="java.lang.String">
                      
                        <bind-xml name="action"/>
                </field>
           
                <field name="RunIntervalShadow"
                       type="java.lang.Integer">
                      
                        <bind-xml name="runInterval"/>
                </field>
                
                <field name="StablePeriodShadow"
                       type="java.lang.Integer">  
                      
                        <bind-xml name="stablePeriod"/>
                </field>
                
                 <field name="CreationDate"
                       type="java.util.Date">
                      
                        <bind-xml name="createDate"/>
                </field>
                
                <field name="ChangedDate"
                       type="java.util.Date">
                      
                        <bind-xml name="changeDate"/>
                </field>
                
         </class>
         
</mapping>
