<?xml version="1.0" encoding="UTF-8"?>
<sc:ServiceDefinition xmlns:sc="http://www.platform.com/ego/2005/05/schema/sc"
xmlns:ego="http://www.platform.com/ego/2005/05/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:schemaLocation="http://www.platform.com/ego/2005/05/schema/sc ../sc.xsd http://www.platform.com/ego/2005/05/schema ../ego.xsd" ServiceName="purger">
  <sc:Version>1.2</sc:Version>	  
  <sc:Description>EGO PERF: Purger</sc:Description>
  <sc:MinInstances>1</sc:MinInstances>
  <sc:MaxInstances>1</sc:MaxInstances>
  <sc:MaxInstancesPerSlot>1</sc:MaxInstancesPerSlot>
  <sc:MaxInstancesPerHost>1</sc:MaxInstancesPerHost>
  <sc:Priority>100</sc:Priority>
  <sc:ControlPolicy>
    <sc:StartType>AUTOMATIC</sc:StartType>
    <sc:MaxRestarts>10</sc:MaxRestarts>
    <sc:HostFailoverInterval>PT1M</sc:HostFailoverInterval>
  </sc:ControlPolicy>
  <sc:AllocationSpecification>
    <ego:ConsumerID>/ManagementServices/EGOManagementServices</ego:ConsumerID>
    <sc:ResourceSpecification ResourceType="http://www.platform.com/ego/2005/05/schema/ce">
      <ego:ResourceGroupName>ManagementHosts</ego:ResourceGroupName>
      <ego:ResourceRequirement>select('LINUXPPC64'||'LINUXPPC64LE'||'LINUX86'||'X86_64'||'IA64'||'NTX86'||'NTX64'||'SOLX8664'||'SOL64')</ego:ResourceRequirement>
    </sc:ResourceSpecification>
  </sc:AllocationSpecification>
  <sc:ActivityDescription>
    <ego:Attribute name="hostType" type="xsd:string">NTX86</ego:Attribute>
    <ego:ActivitySpecification>
      <ego:Command>"${EGO_TOP}\perf\4.0\etc\purger.bat" -t 00:30</ego:Command>
      <ego:ExecutionUser>egoadmin</ego:ExecutionUser>
      <ego:Umask>0022</ego:Umask>
      <ego:WorkingDirectory>${EGO_TOP}\perf</ego:WorkingDirectory>
      <ego:EnvironmentVariable name="EGO_TOP">${EGO_TOP}</ego:EnvironmentVariable>
      <ego:EnvironmentVariable name="PERF_CONFDIR">${EGO_CONFDIR}\..\..\perf\conf</ego:EnvironmentVariable>
    </ego:ActivitySpecification>
  </sc:ActivityDescription>
  <sc:ActivityDescription>
    <ego:Attribute name="hostType" type="xsd:string">NTX64</ego:Attribute>
    <ego:ActivitySpecification>
      <ego:Command>"${EGO_TOP}\perf\4.0\etc\purger.bat" -t 00:30</ego:Command>
      <ego:ExecutionUser>egoadmin</ego:ExecutionUser>
      <ego:Umask>0022</ego:Umask>
      <ego:WorkingDirectory>${EGO_TOP}\perf</ego:WorkingDirectory>
      <ego:EnvironmentVariable name="EGO_TOP">${EGO_TOP}</ego:EnvironmentVariable>
      <ego:EnvironmentVariable name="PERF_CONFDIR">${EGO_CONFDIR}\..\..\perf\conf</ego:EnvironmentVariable>
    </ego:ActivitySpecification>
  </sc:ActivityDescription>
  <sc:ActivityDescription>
    <ego:Attribute name="hostType" type="xsd:string">all</ego:Attribute>
    <ego:ActivitySpecification>
      <ego:Command>${EGO_TOP}/perf/4.0/etc/purger.sh -t 00:30</ego:Command>
      <ego:ExecutionUser>egoadmin</ego:ExecutionUser>
      <ego:Umask>0022</ego:Umask>
      <ego:WorkingDirectory>${EGO_TOP}/perf/work</ego:WorkingDirectory>
      <ego:EnvironmentVariable name="EGO_TOP">${EGO_TOP}</ego:EnvironmentVariable>
      <ego:EnvironmentVariable name="PERF_TOP">${PERF_TOP}</ego:EnvironmentVariable>
      <ego:EnvironmentVariable name="PERF_CONFDIR">${PERF_CONFDIR}</ego:EnvironmentVariable>
      <ego:EnvironmentVariable name="PERF_LOGDIR">${PERF_LOGDIR}</ego:EnvironmentVariable>
      <ego:EnvironmentVariable name="PERF_WORKDIR">${PERF_WORKDIR}</ego:EnvironmentVariable>
    </ego:ActivitySpecification>
  </sc:ActivityDescription>
  <sc:NeedCredential>true</sc:NeedCredential>
</sc:ServiceDefinition>
